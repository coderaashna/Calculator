<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:orientation="vertical"
    android:rowCount="6"
    android:paddingTop="8dp"
    android:paddingLeft="8dp"
    android:paddingBottom="8dp"
    android:paddingRight="8dp"
    tools:context=".MainActivity"
    >

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/txt"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:textSize="46sp"
        android:textStyle="bold"
        android:gravity="right|center_vertical"
        android:background="@color/No_plate_background"
        android:textColor="@color/No_plate_text_color"
        android:layout_margin="2dp"
        android:paddingRight="5dp"
        />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:onClick="onClickBtn1"
        android:text="1"
        android:background="@color/Btn_background"
        android:textColor="@color/Btn_txt_color"
        android:layout_margin="2dp"/>

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:onClick="onClickBtn2"
        android:text="2"
        android:background="@color/Btn_background"
        android:textColor="@color/Btn_txt_color"
        android:layout_margin="2dp"/>

    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_column="2"
        android:onClick="onClickBtn3"
        android:text="3"
        android:background="@color/Btn_background"
        android:textColor="@color/Btn_txt_color"
        android:layout_margin="2dp"/>

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_column="3"
        android:onClick="onClickBtnAdd"
        android:text="+"
        android:background="@color/Btn_background"
        android:textColor="@color/Btn_txt_color"
        android:layout_margin="2dp"/>

    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:onClick="onClickBtn4"
        android:text="4"
        android:background="@color/Btn_background"
        android:textColor="@color/Btn_txt_color"
        android:layout_margin="2dp"/>

    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:onClick="onClickBtn5"
        android:text="5"
        android:background="@color/Btn_background"
        android:textColor="@color/Btn_txt_color"
        android:layout_margin="2dp"/>

    <Button
        android:id="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:layout_column="2"
        android:onClick="onClickBtn6"
        android:text="6"
        android:background="@color/Btn_background"
        android:textColor="@color/Btn_txt_color"
        android:layout_margin="2dp"/>

    <Button
        android:id="@+id/btnSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:layout_column="3"
        android:onClick="onClickBtnSub"
        android:text="-"
        android:background="@color/Btn_background"
        android:textColor="@color/Btn_txt_color"
        android:layout_margin="2dp"/>

    <Button
        android:id="@+id/btn7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:onClick="onClickBtn7"
        android:text="7"
        android:background="@color/Btn_background"
        android:textColor="@color/Btn_txt_color"
        android:layout_margin="2dp"/>

    <Button
        android:id="@+id/btn8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:onClick="onClickBtn8"
        android:text="8"
        android:background="@color/Btn_background"
        android:textColor="@color/Btn_txt_color"
        android:layout_margin="2dp"/>

    <Button
        android:id="@+id/btn9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:layout_column="2"
        android:onClick="onClickBtn9"
        android:text="9"
        android:background="@color/Btn_background"
        android:textColor="@color/Btn_txt_color"
        android:layout_margin="2dp"/>

    <Button
        android:id="@+id/btnMul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:layout_column="3"
        android:onClick="onClickBtnMul"
        android:text="*"
        android:background="@color/Btn_background"
        android:textColor="@color/Btn_txt_color"
        android:layout_margin="2dp"/>

    <Button
        android:id="@+id/btn0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:onClick="onClickBtn0"
        android:text="0"
        android:background="@color/Btn_background"
        android:textColor="@color/Btn_txt_color"
        android:layout_margin="2dp"/>

    <Button
        android:id="@+id/btnMod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_row="4"
        android:layout_rowWeight="1"
        android:layout_column="2"
        android:text="%"
        android:background="@color/Btn_background"
        android:textColor="@color/Btn_txt_color"
        android:layout_margin="2dp"/>

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_rowWeight="1"
        android:layout_column="3"
        android:onClick="onClickBtnDiv"
        android:text="/"
        android:background="@color/Btn_background"
        android:textColor="@color/Btn_txt_color"
        android:layout_margin="2dp"/>

    <Button
        android:id="@+id/btnClr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:onClick="onClickBtnClr"
        android:text="C"
        android:background="@color/Btn_background"
        android:textColor="@color/Btn_txt_color"
        android:layout_margin="2dp"/>

    <Button
        android:id="@+id/btnEql"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_columnSpan="3"
        android:layout_gravity="fill"
        android:onClick="onClickBtnEql"
        android:text="="
        android:background="@color/Btn_background"
        android:textColor="@color/Btn_txt_color"
        android:layout_margin="2dp"/>

</GridLayout>